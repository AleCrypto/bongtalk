#!/usr/bin/env node

var port = null;

if (process.env.PORT)
{
    port = process.env.PORT;
}
else
{
    var port = require('optimist')
        .usage('Usage : $0 --port [num]')
        .demand(['port'])
        .argv.port;
}

var BongTalk = require('../').BongTalk;
var talkServer = new BongTalk(port);
talkServer.start();
var talkServer2 = new BongTalk(1234);
talkServer2.start();

