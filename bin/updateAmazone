FULL_PATH=$(readlink -e $0)
FILE_NAME="${FULL_PATH##*/}"
FILE_DIR="${FULL_PATH:0:${#FULL_PATH} - ${#FILE_NAME} - 1}"
FILE_BASE="${FILE_NAME%.[^.]*}"
FILE_EXT="${FILE_NAME:${#FILE_BASE} + 1}" 

OLD_DIR=$(pwd)
echo ${FILE_DIR}
cd ${FILE_DIR}
echo $(pwd)
cd ..
forever stopall
git pull
npm install
cd ${FILE_DIR}
forever start ./bongtalk -s -w -o -p 3000 -r redis://54.178.163.236
cd ${OLD_DIR}

