FULL_PATH=$0
FILE_NAME="${FULL_PATH##*/}"
#FILE_DIR="${FULL_PATH:0:${#FULL_PATH} - ${#FILE_NAME} - 1}"
FILE_DIR=$(readlink -e ${FULL_PATH})
FILE_BASE="${FILE_NAME%.[^.]*}"
FILE_EXT="${FILE_NAME:${#FILE_BASE} + 1}" 

OLD_DIR=$(pwd)
cd ${FILE_DIR}
echo $(pwd)
cd ..
sudo forever stopall
git pull
npm install
cd ${FILE_DIR}
sudo forever start ./bongtalk -s -r -p 80 -r redis://54.178.178.147
